<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/lobster_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="header_nav_style" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/lobster_regular</item>
    </style>

    <style name="profileHeader">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleMarginStart">20dp</item>
        <item name="titleMarginTop">5dp</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="profileLabel">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">20dp</item>
        <item name="titleMarginTop">5dp</item>
    </style>

    <style name="title_list_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
